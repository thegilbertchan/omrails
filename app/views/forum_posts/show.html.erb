<div class="container" style="padding-top:40px;">
	<p>
	  <strong>User:</strong>
	  <%= @forum_post.user.email %>
	</p>

	<p>
	  <strong>Forum thread:</strong>
	  <%= @forum_post.forum_thread %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @forum_post.content %>
	</p>
	<% if @forum_post.user == current_user %>
	<%= link_to 'Edit', edit_forum_post_path(@forum_post) %> |
	<% end %>
	<%= link_to 'Back', forum_posts_path %>
</div>