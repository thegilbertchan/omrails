<div class="container" style="padding-top:40px;">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
        <h4 class="card-title">Your Account</h4>
        <p class="card-text"><% current_user.email %></p>
      </div> 
    </div>
  
  <div class="col-md-8">
    <% if user_signed_in? %>
      <%= link_to 'New Tweet', new_tweet_path %>
    <% end %>
    <ul class="list-group">
      <% @tweets.each do |tweet| %>
      <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
            <h5 class="list-group-item-heading"><%= tweet.content %></h5>
            <p class="list-group-item-text"><%= tweet.user.email %></p>           
            <% end %>
      <% end %>
    </ul>
    </div>
  </div>
</div>